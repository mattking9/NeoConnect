@page "/"

<PageTitle>NeoConnect</PageTitle>

@using NeoConnect
@inject IHeatingService _heatingService
@attribute [StreamRendering]

@if (sortedDevices == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div id="live-data" class="row">
        
            @foreach (var device in sortedDevices)
            {
            <div class="col-6" @key="device.DeviceId">
                <div class="card text-center mt-3">
                    <div class="card-body">
                        <p class="card-title truncate">@device.ZoneName</p>
                        <p class="card-text">
                            <span class="@((device.IsHeating || device.TimerOn) ? "on" : device.IsPreheating ? "pre" : "")" style="font-size:2em;">
                                @(device.IsThermostat? device.ActualTemp + "°": device.TimerOn ? "ON" : "OFF")
                            </span>
                        </p>
                        <p class="card-subtitle mb-2 text-muted">@(device.IsThermostat ? device.SetTemp + "°" : "n/a")</p>
                    </div>
                </div>
            </div>
            }    
        
    </div>
}

@code {
    private List<NeoDevice>? sortedDevices;

    protected override async Task OnInitializedAsync()
    {
        var stoppingToken = CancellationToken.None;

        var devices = await _heatingService.GetDevices(stoppingToken);
        sortedDevices = devices.OrderByDescending(d => d.IsHeating || d.IsPreheating || d.TimerOn).ThenBy(d => !d.IsThermostat).ToList();
    }
}

