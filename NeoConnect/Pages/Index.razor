@page "/"

<PageTitle>Index</PageTitle>

@using NeoConnect
@inject IHeatingService _heatingService


@if (devices == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div id="live-data" class="row">
        
            @foreach (var device in devices)
            {
            <div class="col-6">
                <div class="card text-center bg-light mt-3">
                <div class="card-body">
                    <p class="card-title">@device.ZoneName</p>
                    <p class="card-text"><span class="@(device.IsHeating ? "on" : device.IsPreheating ? "pre" : "")" style="font-size:3em;">@device.ActualTemp°</span></p>
                    <p class="card-subtitle mb-2 text-muted">@device.SetTemp°</p>
                </div>
            </div>
            </div>
            }    
        
    </div>
}

@code {
    private List<NeoDevice>? devices;

    protected override async Task OnInitializedAsync()
    {
        var stoppingToken = CancellationToken.None;
        await _heatingService.Init(stoppingToken);
        devices = await _heatingService.GetDevices(stoppingToken);
        await _heatingService.Cleanup(stoppingToken);
    }
}

